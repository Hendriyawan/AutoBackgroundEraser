<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_pick_from_gallery"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:src="@drawable/ic_gallery"
        android:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/btn_pick_from_camera"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@id/btn_pick_from_gallery"
        android:layout_toLeftOf="@id/btn_pick_from_gallery"
        android:contentDescription="@null"
        android:src="@drawable/ic_camera"
        android:tint="@android:color/white" />

    <ImageButton
        android:id="@+id/btn_pick_from_url"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/btn_pick_from_gallery"
        android:layout_toRightOf="@id/btn_pick_from_gallery"
        android:contentDescription="@null"
        android:src="@drawable/ic_url"
        android:tint="@android:color/white" />

</RelativeLayout>